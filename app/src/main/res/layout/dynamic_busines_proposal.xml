<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_customerheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:padding="8dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/sr"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="SrNo"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

        <TextView android:id="@+id/tv"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Package"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />
        <TextView android:id="@+id/tv1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Amount"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />
        <TextView android:id="@+id/tv2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Package BV"
            android:layout_marginRight="3dp"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

        <TextView android:id="@+id/tv3"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Transaction Date"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />
        <TextView android:id="@+id/tv4"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Transaction Date"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

        <TextView android:id="@+id/tv5"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Transaction Date"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

        <TextView  android:id="@+id/tv6"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Transaction Date"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

        <TextView  android:id="@+id/tv7"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Transaction Date"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

        <TextView  android:id="@+id/tv8"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Transaction Date"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13dp"
            />

    </LinearLayout>

</LinearLayout>